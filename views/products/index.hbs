{{#extends 'base'}}

{{#block 'content'}}
<h2>Product List</h2>
<div>
    <a href="/products/create" class="btn btn-primary mb-3">Create</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Cost
            </th>
            <th>
                Description
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.cost}}</td>
            <td>{{this.description}}</td>
            <td><a href="/products/"+{{this.product_id}}+"/update">Update</a></td>
            <td><a href="/products/"+{{this.product_id}}+"/delete">Delete</a></td>
        </tr>
        {{/each}}
    </tbody>

</table>

{{/block}}

{{/extends}}